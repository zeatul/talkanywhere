<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hawk.pub.sms.mapper.MessageMapper">

	<sql id="columns">
		id as "id" ,
		mobile as "mobile" ,
		message as "message" ,
		kind as "kind" ,
		status as "status" ,
		send_time as "sendTime" ,
		send_times as "sendTimes" ,
		expire_time as "expireTime" ,
		max_times as "maxTimes" ,
		crdt as "crdt" ,
		updt as "updt" 
	</sql>
	
	<sql id="where">
		<trim prefix="WHERE" prefixOverrides="AND">		 
			<if test="id != null"> AND id = #{id}  </if>
			<if test="mobile != null"> AND mobile = #{mobile}  </if>
			<if test="message != null"> AND message = #{message}  </if>
			<if test="kind != null"> AND kind = #{kind}  </if>
			<if test="status != null"> AND status = #{status}  </if>
			<if test="sendTime != null"> AND send_time = #{sendTime}  </if>
			<if test="sendTimes != null"> AND send_times = #{sendTimes}  </if>
			<if test="expireTime != null"> AND expire_time = #{expireTime}  </if>
			<if test="maxTimes != null"> AND max_times = #{maxTimes}  </if>
			<if test="crdt != null"> AND crdt = #{crdt}  </if>
			<if test="updt != null"> AND updt = #{updt}  </if>
		</trim>	
	</sql>
	
	<sql id="where_old">
		<trim prefix="WHERE" prefixOverrides="AND">
			AND id = #{old_id}
			AND mobile = #{old_mobile}
			AND message = #{old_message}
			AND kind = #{old_kind}
			AND status = #{old_status}
			AND send_time = #{old_sendTime}
			AND send_times = #{old_sendTimes}
			AND expire_time = #{old_expireTime}
			AND max_times = #{old_maxTimes}
			AND crdt = #{old_crdt}
			AND updt = #{old_updt}
		</trim>
	</sql>
	
	<sql id="update">
		<set>
			mobile = #{mobile},
			message = #{message},
			kind = #{kind},
			status = #{status},
			send_time = #{sendTime},
			send_times = #{sendTimes},
			expire_time = #{expireTime},
			max_times = #{maxTimes},
			crdt = #{crdt},
			updt = #{updt},
		</set>
	</sql>
	
	<sql id="updateWithoutNull">
		<set>
				<if test="mobile != null">mobile = #{mobile},</if>
				<if test="message != null">message = #{message},</if>
				<if test="kind != null">kind = #{kind},</if>
				<if test="status != null">status = #{status},</if>
				<if test="sendTime != null">send_time = #{sendTime},</if>
				<if test="sendTimes != null">send_times = #{sendTimes},</if>
				<if test="expireTime != null">expire_time = #{expireTime},</if>
				<if test="maxTimes != null">max_times = #{maxTimes},</if>
				<if test="crdt != null">crdt = #{crdt},</if>
				<if test="updt != null">updt = #{updt},</if>
		</set>
	</sql>
	
	<sql id="pkwhere">
		<trim prefix="WHERE" prefixOverrides="AND">
			AND id = #{id}
		</trim>
	</sql>
	
	<select id="load"  resultType="MessageDomain">
		SELECT 
		<include refid="columns" />
		FROM t_sm_message
		<include refid="pkwhere" />		
	</select>
	
	<select id="loadMessageDynamic" parameterType="hashmap" resultType="MessageDomain">
		SELECT 		
		<include refid="columns" />
		FROM t_sm_message
		<include refid="where" />
		<if test="_orderby != null">ORDER BY ${_orderby}</if>
		<if test="_offset != null">LIMIT #{_offset},#{_limit}</if>	
	</select>


	<select id="count"  parameterType="hashmap" resultType="integer">
		SELECT count(*) 
		FROM t_sm_message
		<include refid="where" />
	</select>
	
	<insert id="insert"  parameterType="MessageDomain">
		INSERT INTO t_sm_message (			
				id,				
				mobile,				
				message,				
				kind,				
				status,				
				send_time,				
				send_times,				
				expire_time,				
				max_times,				
				crdt,				
				updt				
		)		
		VALUES (	
			#{id},
			#{mobile},
			#{message},
			#{kind},
			#{status},
			#{sendTime},
			#{sendTimes},
			#{expireTime},
			#{maxTimes},
			#{crdt},
			#{updt}
		) 
	</insert>
	
	<delete id="delete" >
		DELETE FROM t_sm_message
		<include refid="pkwhere" />	
	#end
	</delete>
	
	<delete id="deleteDynamic" parameterType="hashmap">
		DELETE FROM t_sm_message
		<include refid="where" />
	</delete>

	<update id="updateMessage" parameterType="MessageDomain">
		UPDATE t_sm_message	
		<include refid="update" />
		<include refid="pkwhere" />	
	</update>
	
	<update id="updateMessageWithoutNull" parameterType="MessageDomain">
		UPDATE t_sm_message
		<include refid="updateWithoutNull"/>
		<include refid="pkwhere" />	
	</update>
	
	<update id="updateMessageDynamic" parameterType="hashmap">
		UPDATE t_sm_message	
		<include refid="update" />
		<include refid="where_old" />
	</update>
	
	
	
</mapper>