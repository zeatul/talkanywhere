<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.taw.user.mapper.PartnerMapper">

	<sql id="columns">
		id as "id" ,
		channel as "channel" ,
		channel_code as "channelCode" ,
		user_id as "userId" ,
		crdt as "crdt" 
	</sql>
	
	<sql id="where">
		<trim prefix="WHERE" prefixOverrides="AND">		 
			<if test="id != null"> AND id = #{id}  </if>
			<if test="channel != null"> AND channel = #{channel}  </if>
			<if test="channelCode != null"> AND channel_code = #{channelCode}  </if>
			<if test="userId != null"> AND user_id = #{userId}  </if>
			<if test="crdt != null"> AND crdt = #{crdt}  </if>
		</trim>	
	</sql>
	
	<sql id="where_old">
		<trim prefix="WHERE" prefixOverrides="AND">
			AND id = #{old_id}
			AND channel = #{old_channel}
			AND channel_code = #{old_channelCode}
			AND user_id = #{old_userId}
			AND crdt = #{old_crdt}
		</trim>
	</sql>
	
	<sql id="update">
		<set>
			channel = #{channel},
			channel_code = #{channelCode},
			user_id = #{userId},
			crdt = #{crdt},
		</set>
	</sql>
	
	<sql id="updateWithoutNull">
		<set>
				<if test="channel != null">channel = #{channel},</if>
				<if test="channelCode != null">channel_code = #{channelCode},</if>
				<if test="userId != null">user_id = #{userId},</if>
				<if test="crdt != null">crdt = #{crdt},</if>
		</set>
	</sql>
	
	<select id="loadPartner" parameterType="integer" resultType="Partner">
		SELECT 
		<include refid="columns" />
		FROM t_um_partner
		WHERE id = #{id}			
		#end		
	</select>
	
	<select id="loadPartnerDynamic" parameterType="hashmap" resultType="Partner">
		SELECT 		
		<include refid="columns" />
		FROM t_um_partner
		<include refid="where" />
		<if test="_orderby != null">ORDER BY ${_orderby}</if>
		<if test="_offset != null">LIMIT #{_offset},#{_limit}</if>	
	</select>


	<select id="countPartnerDynamic"  parameterType="hashmap" resultType="integer">
		SELECT count(*) 
		FROM t_um_partner
		<include refid="where" />
	</select>
	
	<insert id="insertPartner" useGeneratedKeys="true" keyProperty="id" parameterType="Partner">
		INSERT INTO t_um_partner (			
					channel,
					channel_code,
					user_id,
					crdt
		)		
		VALUES (	
				#{channel},
				#{channelCode},
				#{userId},
				#{crdt}
		) 
	</insert>
	
	<delete id="deletePartner" parameterType="integer">
		DELETE FROM t_um_partner
		WHERE  id = #{id}
	#end
	</delete>
	
	<delete id="deletePartnerDynamic" parameterType="hashmap">
		DELETE FROM t_um_partner
		<include refid="where" />
	</delete>

	<update id="updatePartner" parameterType="Partner">
		UPDATE t_um_partner	
		<include refid="update" />
		WHERE id = #{id}	
	</update>
	
	<update id="updatePartnerDynamic" parameterType="hashmap">
		UPDATE t_um_partner	
		<include refid="update" />
		<include refid="where_old" />
	</update>
	
	<update id="updatePartnerWithoutNull" parameterType="Partner">
		UPDATE t_um_partner
		<include refid="updateWithoutNull"/>
		WHERE id = #{id}
	</update>
	
</mapper>